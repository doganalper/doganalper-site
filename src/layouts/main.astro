---
import { ViewTransitions } from "astro:transitions";

import Header from "src/components/Header.astro";
const DESCRIPTION = "Developer based in İstanbul, Türkiye";
import "src/styles/globals.css";

const { pathname, origin } = Astro.url;
let url = `${origin}${pathname}`;

// Blog posts should not have trailing slashes to avoid duplicate content
// Other pages can have trailing slashes
// Check if this is a blog post by checking if pathname matches /blog/[slug] pattern
const isBlogPost = /^\/blog\/[^\/]+$/.test(pathname);
if (!isBlogPost && !url.endsWith("/")) {
  url = `${url}/`;
}

let {
  title,
  description = DESCRIPTION,
  imagePath,
  isArticle = false,
  author,
  publishedTime,
  modifiedTime,
  tags = [],
  htmlLang = "en",
  locale = "en_US",
} = Astro.props;

title = title ? `${title} | Alper Doğan` : "Alper Doğan";

const metaImage = imagePath
  ? `${url}${imagePath}`
  : `${origin}/default-meta-image.png`;

// Determine Twitter card type based on image
const twitterCard = imagePath ? "summary_large_image" : "summary";
---

<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta content="#3b6ea5" name="theme-color" />
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:site" content="@alperdogan" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:url" content={url} />
    <link rel="canonical" href={url} />
    <meta property="og:type" content={isArticle ? "article" : "website"} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={metaImage} />
    <meta property="og:site_name" content="Alper Doğan" />
    <meta property="og:locale" content={locale} />
    <meta property="twitter:image" content={metaImage} />
    <meta name="robots" content="index, follow" />
    {isArticle && publishedTime && (
      <>
        <meta property="article:published_time" content={publishedTime} />
        {author && <meta property="article:author" content={author} />}
        {tags.length > 0 &&
          tags.map((tag: string) => (
            <meta property="article:tag" content={tag} />
          ))}
        {modifiedTime && (
          <meta property="article:modified_time" content={modifiedTime} />
        )}
      </>
    )}
    {tags.length > 0 && (
      <meta name="keywords" content={tags.join(", ")} />
    )}
    <ViewTransitions />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="preload"
      href="/fonts/Poppins-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
  </head>
  <body class="windows-xp">
    <slot />
  </body>
</html>
