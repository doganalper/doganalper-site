---
import MainLayout from 'src/layouts/main.astro'
import BlogPostMetaInfo from 'src/components/BlogPostMetaInfo.vue'
import { getCollection, getEntry } from 'astro:content'

export async function getStaticPaths() {
	const posts = await getCollection('blog')

	return posts.map((page) => ({
		params: { slug: page.slug, tag: page.data.tag },
		props: page,
	}))
}

const { slug } = Astro.params
if (slug === undefined) {
	throw new Error('Slug is required')
}

const entry = await getEntry('blog', slug)

if (entry === undefined) {
	return Astro.redirect('/404')
}

const { Content } = await entry.render()

const title = `${entry.data.title} | Alper DoÄŸan`
const imagePath = `/og-image.png`
---

<MainLayout title={title} description={entry.data.description} imagePath={imagePath}>
	<article class="space-y-5">
		<header class="space-y-1.5">
			<h1 class="text-3xl text-black font-semibold">
				{entry.data.title}
			</h1>
			<h2 class="text-xl">{entry.data.description}</h2>
			<BlogPostMetaInfo entry={entry} />
		</header>
		<section class="leading-8 text-lg space-y-2.5 tracking-wide">
			<Content />
		</section>
	</article>
</MainLayout>
